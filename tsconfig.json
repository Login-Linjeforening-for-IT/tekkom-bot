{
    "compilerOptions": {
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "module": "nodenext",
        "moduleResolution": "nodenext",
        "outDir": "dist",
        "strict": true,
        "target": "es2022",
    },
    "paths": {
        "@*": ["./src/*"],
        "@utils/*": ["./src/utils/*"],
        "@config": ["./.secrets.js"],
        "@components/*": ["./src/components/*"],
        "@parent/*": ["./*"]
    },
    "include": [
        "**/*.ts",
        "**/*.d.ts",
        "**/*.json", "secret.ts",
    ],
    "exclude": ["node_modules"]
}
